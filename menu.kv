#:import utils kivy.utils

<MenuScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#99ffeb')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: (.4, .5)
        spacing: 10
        Button:
            text: 'Bills'
        Button:
            text: 'Savings Goals'
        Button:
            text: 'Debt'
        Button:
            text: 'Purchase History'
        Button:
            text: 'Accounts'